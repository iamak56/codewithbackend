        }
    });

    // Add click handler for user icon dropdown
    document.getElementById('userIcon').addEventListener('click', function(e) {
        e.preventDefault();
        const dropdownMenu = this.nextElementSibling;
        dropdownMenu.style.display = dropdownMenu.style.display === 'block' ? 'none' : 'block';
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', function(e) {
        if (!e.target.matches('#userIcon')) {
            const dropdowns = document.getElementsByClassName('dropdown-menu');
            for (const dropdown of dropdowns) {
                dropdown.style.display = 'none';
            }
        }
    });

    const searchInput = document.getElementById('searchInput');
    const searchResults = document.getElementById('searchResults');

    // Combined products data from all pages
    const products = [
        // Buynow page products
        { name: 'After Effect', price: '$100.00', image: '/After-effect.webp', category: 'Software' },
        { name: 'Premiere Pro', price: '$130.00', image: '/Premiere Pro.svg', category: 'Software' },
        { name: 'Photoshop', price: '$400.99', image: '/Photoshop.svg', category: 'Software' },
        { name: 'Technotopia', price: '$50.56', image: '/technotopia.avif', category: 'Game' },
        { name: 'Hordes of Hel', price: '$84.95', image: '/hordes-of-hel.avif', category: 'Game' },
        { name: 'Egregore', price: '$85.32', image: '/egregore.avif', category: 'Game' },
        
        // Industry page products
        { name: 'Adobe Premiere Pro', price: '$239.88', image: '/premiere-pro.svg', category: 'Industry' },
        { name: 'Adobe Photoshop', price: '$239.88', image: '/photoshop.svg', category: 'Industry' },
        { name: 'QuickBooks Online', price: '$25.00', image: '/Online Book.svg', category: 'Industry' },
        { name: 'Blender', price: '$155.00', image: '/blender.png', category: 'Industry' },
        { name: 'Autodesk Maya', price: '$1,545.00', image: '/maya.webp', category: 'Industry' },
        { name: 'Maxon Cinema 4D', price: '$999.00', image: '/cinema4d.png', category: 'Industry' },

        // Grow page products
        { name: 'The Lean Startup', price: '$29.99', image: '/BB book.jpeg', category: 'Business' },
        { name: 'Digital Marketing Masterclass', price: '$49.99', image: '/DM masterclass.jpeg', category: 'Business' },
        { name: 'Daily Productivity Planner', price: '$19.99', image: '/Daily productive.webp', category: 'Business' },
        { name: 'Personal Development Course', price: '$59.99', image: '/Personal.webp', category: 'Business' },
        { name: 'Startup Networking Event', price: '$39.99', image: '/Networking.jpeg', category: 'Business' },
        { name: '1-on-1 Business Coaching', price: '$199.99', image: '/1To1.webp', category: 'Business' }
    ];

    searchInput.addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        searchResults.innerHTML = '';
        
        if (searchTerm.length > 0) {
            const matchingProducts = products.filter(product => 
                product.name.toLowerCase().includes(searchTerm) ||
                product.category.toLowerCase().includes(searchTerm)
            );
            
            matchingProducts.forEach(product => {
                const div = document.createElement('div');
                div.className = 'search-result-item';
                div.innerHTML = `
                    <img src="${product.image}" alt="${product.name}">
                    <div class="search-item-details">
                        <span class="search-item-name">${product.name}</span>
                        <span class="search-item-category">${product.category}</span>
                        <span class="search-item-price">${product.price}</span>
                    </div>
                `;
                div.addEventListener('click', () => {
                    window.location.href = `/product/${encodeURIComponent(product.name)}`;
                });
                searchResults.appendChild(div);
            });
            
            searchResults.style.display = matchingProducts.length > 0 ? 'block' : 'none';
        } else {
            searchResults.style.display = 'none';
        }
    });

    // Close search results when clicking outside
    document.addEventListener('click', function(e) {
        if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
            searchResults.style.display = 'none';
        }
    });
</script>

<style>
.search-results {
