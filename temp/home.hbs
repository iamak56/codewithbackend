<script>
    // Remove popup after 3 seconds
    const popup = document.getElementById('popup');
    if (popup) {
        setTimeout(() => {
            popup.remove();
        }, 3000);
    }

    // Add logout confirmation
    document.getElementById('logout-button')?.addEventListener('click', function(e) {
